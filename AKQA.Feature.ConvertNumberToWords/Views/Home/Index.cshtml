@{
    ViewBag.Title = "Home Page";
}
<div class="jumbotron">
    <h1>Convert Number to Words</h1>

</div>
<div class="row">
    <div class="col-md-6">
        <div class="row ">
            <label for="name" class="control-label">Please Enter Name:</label>
            <input type="text" class="form-control" name="name" placeholder="e.g. John Smith" required /><br />
            <label class="label-danger" id="labelName" style="display:none;"></label>
        </div>
        <div class="row">
            <label for="name" class="control-label">Please Enter Number:</label><br />
            <input type="text" class="form-control" placeholder="e.g. 123.45" name="number" required /><br />
            <label class="label-danger" id="labelNumber" style="display:none;"></label>
        </div>
        <div class="row">
            <input type="button" class="btn" id="convertButton" name="submit" value="Convert" />
        </div>
        <div class="row">           
            <br />
            <label class="label-success"></label>
        </div>
    </div>    
</div>